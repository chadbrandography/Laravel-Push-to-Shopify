<script
  type="application/json"
  data-section-type="custom-html"
  data-section-id="{{ section.id }}"
>
</script>

{% comment %} Section specific CSS {% endcomment %}
{% style %}
  {%
    render 'css-loop',
    css: section.settings.custom_css,
    id: section.id,
  %}
  .html-section { 
    padding-top: 60px; 
    padding-bottom: 60px; 
  }
  .no-top-padding {padding-top: 0 !important; margin-top: -30px}

  .show-wood-bg {
    background-image: url(https://cdn.shopify.com/s/files/1/0634/4707/2998/files/wood-background.jpg?v=1653598971);
    background-position: right bottom;
    background-repeat: repeat-x;
  }
{% endstyle %}

<section class="html-section {% if section.settings.no-top-padding == true %}no-top-padding{% endif %}{% if section.settings.show-wood-bg == true %} show-wood-bg{% endif %}{{ section.settings.css_class }}">
  <div class="container site-width">
    <div class="one-whole column custom-html-container">
      {% if section.settings.custom_html != blank %}
        <div class="rte">
          {{ section.settings.custom_html }}
        </div>
      {% else %}
        <p class="center">
          {{ 'homepage.onboarding.no_content' | t }}
        </p>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom HTML",
  "class": "shopify-section--custom-html",
  "settings": [
    {
      "type": "textarea",
      "id": "custom_html",
      "label": "Custom html"
    },
    {
      "type": "header",
      "content": "Advanced"
    },
    {
      "type": "checkbox",
      "id": "no-top-padding",
      "label": "Remove top padding",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show-wood-bg",
      "label": "Show wood background",
      "default": false
    },
    {
      "type": "paragraph",
      "content": "[Learn more](https://help.outofthesandbox.com/hc/en-us/articles/360022329373)"
    },
    {
      "type": "text",
      "id": "css_class",
      "label": "CSS Class"
    },
    {
      "type": "textarea",
      "id": "custom_css",
      "label": "Custom CSS"
    }
  ],
  "presets": [{
    "name": "Custom HTML",
    "category": "Content"
  }]
}

{% endschema %}